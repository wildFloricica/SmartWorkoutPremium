@page "/"
@page "/login"
@using Blazorise.Extensions
@using SmartWorkout.Entities
@using SmartWorkout.ExtensionMethod
@rendermode InteractiveServer

<Alert Color="Color.Danger" Visible="@(!ErrorMessage.IsNullOrEmpty())">
	<AlertMessage>Login Failed!</AlertMessage>
	<CloseButton/>
	<AlertDescription>You have entered invalid credentials</AlertDescription>
</Alert>

<h3>LoginPage</h3>

<EditForm Model="@LoginDTO" OnValidSubmit="@Login" FormName="LoginUser">
	<DataAnnotationsValidator />

	<div class="form-group">
		<label>Email :</label>
		<div>
			<InputText @bind-Value="LoginDTO.Email" class="form-control col-sm-3" />
			<ValidationMessage For="@(() => LoginDTO.Email)" />
		</div>
	</div>

	<div class="form-group">
		<label>Password :</label>
		<div>
			<InputText @bind-Value="LoginDTO.Password" class="form-control col-sm-3" />
			<ValidationMessage For="@(() => LoginDTO.Password)" />
		</div>
	</div>

	<div class="form-group">
		<button type="submit" class="btn btn-primary">Login</button>
	</div>
</EditForm>
