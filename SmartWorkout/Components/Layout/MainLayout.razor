@inherits LayoutComponentBase

<div class="page" >
	<div hidden="@(!IsLoggedIn)" class="sidebar">
		<NavMenu/>
	</div>

	<main>
		<div class="top-row px-4">
			
			@if (IsLoggedIn)
			{
				<Dropdown>
					<DropdownToggle Color="Color.Primary">
						<span class="fas fa-user" style="margin-right:1rem"></span>
						Hello, @User.FirstName @User.LastName
					</DropdownToggle>
					<DropdownMenu>
						<DropdownItem Clicked="() => LogOut()" Margin="Margin.Is0">Log Out</DropdownItem>
					</DropdownMenu>
				</Dropdown>
			}
			else
			{
				<a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
			}

		</div>
		<div>
			@Body
		</div>
		

	</main>

</div>







