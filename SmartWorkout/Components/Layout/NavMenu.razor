@rendermode InteractiveServer


<div class="top-row ps-3 navbar" style="background-color:#03A678;">
		<NavLink class="container-fluid nav-link" Style="justify-content:flex-start" href="home">
			<Span TextSize="TextSize.Large" class="fas fa-stopwatch-20" Margin="Margin.Is3.FromEnd" TextColor="TextColor.White">
			</Span>
			<Text TextWeight="TextWeight.Bold" TextSize="TextSize.Large" TextColor="TextColor.Light" href="">SmartWorkout</Text>
		</NavLink>
	</div>

	<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

	<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()" style="!important; background-image:linear-gradient(180deg, rgba(247,247,247,1) 34%, rgba(174,220,194,1) 78%, rgba(116,207,174,1) 100%);;font-family:Roboto !important;">
		<nav class="flex-column">

			<AuthorizeView Roles="Administrator">
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="users">
						<Span class="fas fa-users" Margin="Margin.Is3.FromEnd" TextColor="TextColor.Primary">
						</Span>
						<Text TextWeight="TextWeight.Bold" TextColor="TextColor.Primary">USERS</Text>
					</NavLink>
				</div>
			</AuthorizeView>
			
			<AuthorizeView Roles="Administrator">
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="exercises">
						<Span class="fas fa-dumbbell" Margin="Margin.Is3.FromEnd" TextColor="TextColor.Primary">
						</Span>
					<Text TextWeight="TextWeight.Bold" TextColor="TextColor.Primary">EXERCISES</Text>
					</NavLink>
				</div>
			</AuthorizeView>

			<AuthorizeView Roles="User">
			<div class="nav-item px-3" @onclick="(() => GoToWorkouts())">
					<NavLink class="nav-link">
						<Span class="fas fa-table-list" Margin="Margin.Is3.FromEnd" TextColor="TextColor.Primary">
						</Span>
					<Text TextWeight="TextWeight.Bold" TextColor="TextColor.Primary">WORKOUTS</Text>
					</NavLink>
				</div>
			</AuthorizeView>

			
			<AuthorizeView Roles="Administrator">
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="workouts">
						<Span class="fas fa-table-list" Margin="Margin.Is3.FromEnd" TextColor="TextColor.Primary">
						</Span>
					<Text TextWeight="TextWeight.Bold" TextColor="TextColor.Primary">WORKOUTS</Text>
					</NavLink>
				</div>

			</AuthorizeView>
			
			<AuthorizeView Roles="Administrator">
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="exercise-logs" >
						<Span class="fas fa-clock-rotate-left" Margin="Margin.Is3.FromEnd" TextColor="TextColor.Primary">
						</Span>
					<Text TextWeight="TextWeight.Bold" TextColor="TextColor.Primary">EXERCISE LOGS</Text>
					</NavLink>
				</div>

			</AuthorizeView>
		</nav>

	</div>


