
@using SmartWorkout.Entities
@using SmartWorkout.ExtensionMethod
@page "/users/add"
@page "/users/edit/{UserId:int}"
@rendermode InteractiveServer

<h3>Add user</h3>
<EditForm EditContext="@EditContext" OnValidSubmit="@SaveCurrentUser" FormName="AddUser">
	<DataAnnotationsValidator/>

	<div class="form-group">
		<label>First Name :</label>
		<div>
			<InputText @bind-Value="User.FirstName" class="form-control col-sm-3"/>
			<ValidationMessage For="@(() => User.FirstName)"/>
		</div>
	</div>

	<div class="form-group">
		<label>Last Name :</label>
		<div>
			<InputText @bind-Value="User.LastName" class="form-control col-sm-3"/>
			<ValidationMessage For="@(() => User.LastName)"/>
		</div>
	</div>
	
	<div class="form-group">
		<label>Email :</label>
		<div>
			<InputText @bind-Value="User.Email" class="form-control col-sm-3"/>
			<ValidationMessage For="@(() => User.Email)"/>
		</div>
	</div>
	<div class="form-group">
		<label>Birthday :</label>
		<div>
			<InputDate @bind-Value="User.Birthday" class="form-control col-sm-3"/>
			<ValidationMessage For="@(() => User.Birthday)"/>
		</div>
	</div>
	


	<div class="form-group">
		<label> Select your gender: </label>
		<InputSelect @bind-Value="@User.Gender">

			@foreach (Gender gender in Enum.GetValues(typeof(Gender)))
			{
				<option value="@gender">@gender.GetEnumDescription()</option>
			}
		</InputSelect>
		<ValidationMessage For="@(() => User.Gender)"/>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</EditForm>
